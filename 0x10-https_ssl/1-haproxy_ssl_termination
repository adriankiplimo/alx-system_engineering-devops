global
        log /dev/log    local0
	stats socket /run/haproxy/admin.sock mode 660 level admin

defaults
        log     global
        mode    http
        option  httplog
	timeout connect  10s
	timeout client  30s
	timeout server  30s

frontend abracodea-frontend
	bind *:80
	bind *:443 ssl crt /etc/haproxy/certs/abracodea.tech.pem
	http-request redirect scheme https unless { ssl_fc }
	http-request set-header X-Forwarded-Proto https
	default_backend abracodea-backend

backend abracodea-backend
	balance roundrobin
	server 1378-web-01 3.236.102.171:80 check
	server 1378-web-02 35.174.62.188:80 check
